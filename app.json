{
  "expo": {
    "name": "Avigate",
    "slug": "avigate",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "avigate",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#86B300"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.avigate.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Avigate needs access to your location to show you nearby places and provide navigation services.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Avigate needs access to your location to show you nearby places and provide navigation services.",
        "NSPhotoLibraryUsageDescription": "Allow Avigate to access your photos to update your profile picture",
        "NSCameraUsageDescription": "Allow Avigate to use your camera to take profile pictures"
      },
      "config": {
        "googleMapsApiKey": "EXPO_PUBLIC_GOOGLE_MAPS_API_KEY"
      },
      "googleServicesFile": "./google-services.json"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#86B300",
        "foregroundImage": "./assets/images/android-icon-foreground.png"
      },
      "package": "com.avigate.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "EXPO_PUBLIC_GOOGLE_MAPS_API_KEY"
        }
      },
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "@react-native-firebase/app",
        {
          "android": {
            "googleServicesFile": "./google-services.json"
          }
        }
      ],
      [
        "@react-native-firebase/auth",
        {
          "android": {
            "enableLogging": false
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 300,
          "resizeMode": "contain",
          "backgroundColor": "#86B300"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Avigate to use your location to show you nearby places and provide navigation services.",
          "locationAlwaysPermission": "Allow Avigate to use your location to show you nearby places and provide navigation services.",
          "locationWhenInUsePermission": "Allow Avigate to use your location to show you nearby places and provide navigation services."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Avigate to access your photos to update your profile picture",
          "cameraPermission": "Allow Avigate to use your camera to take profile pictures"
        }
      ],
      "expo-web-browser",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "9c54a19d-b328-4fae-97e8-c8ed057b60d7"
      }
    }
  }
}